<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/game_background">

	<LinearLayout android:orientation="horizontal"
		android:padding="5dp" android:paddingLeft="90dp" android:textStyle="bold"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/tvOpponentName" android:textStyle="bold"
			android:paddingLeft="3dp" android:textSize="14dp"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:text="Opponent" android:layout_weight="1" />

		<TextView android:id="@+id/tvOpponentClocks"
			android:paddingRight="3dp" android:textStyle="bold" android:textSize="14dp"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:text="15:00" />

	</LinearLayout>

	<cz.hejl.chesswalk.ChessBoardView
		android:layout_gravity="center_horizontal" android:id="@+id/chessBoard"
		android:layout_height="320dp" android:layout_width="320dp" />

	<LinearLayout android:orientation="horizontal"
		android:padding="5dp" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/tvMyName" android:layout_height="wrap_content"
			android:paddingLeft="3dp" android:textStyle="bold" android:textSize="14dp"
			android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
			android:text="You" />

		<TextView android:id="@+id/tvYourMove" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:paddingLeft="3dp"
			android:textStyle="bold" android:textSize="14dp" android:textColor="#ee0000"
			android:layout_width="wrap_content" android:text=""
			android:layout_weight="1" />

		<TextView android:id="@+id/tvMyClocks" android:layout_height="wrap_content"
			android:paddingRight="3dp" android:textStyle="bold" android:textSize="14dp"
			android:layout_width="wrap_content" android:text="15:00" />

	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:background="#e0e0e0" android:layout_width="fill_parent"
		android:layout_height="1px" />

	<TextView android:id="@+id/tvInfo" android:layout_height="fill_parent"
		android:layout_weight="1" android:layout_width="wrap_content"
		android:padding="5dp" android:layout_marginLeft="3dp"
		android:textStyle="bold" android:textSize="14dp" android:text="" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:paddingTop="2dp" android:background="@drawable/bottom_bar">

		<Button android:id="@+id/btShowChat" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="16dp"
			android:paddingRight="16dp" android:text="@string/btShowChat" />

		<Button android:id="@+id/btOfferDraw" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="4dp"
			android:paddingLeft="16dp" android:paddingRight="16dp" android:text="@string/btOfferDraw" />

		<Button android:id="@+id/btRequestAbort" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="4dp"
			android:paddingLeft="16dp" android:paddingRight="16dp" android:text="@string/btRequestAbort" />

		<Button android:id="@+id/btResign" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="4dp"
			android:paddingLeft="16dp" android:paddingRight="16dp" android:text="@string/btResign" />

	</LinearLayout>

</LinearLayout>
